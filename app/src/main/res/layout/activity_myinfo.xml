<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.mapplication.Activity.myinfo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/toolmyinf" />


        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_gravity="center"
                android:background="@mipmap/backg"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/myface"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:padding="5dp"
                    android:src="@mipmap/toux" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="25dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/myname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="#ffffff"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/changename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="更改昵称"
                        android:textColor="#ffffff"
                        android:textSize="10dp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="18dp"
                    android:layout_marginTop="12dp"
                    android:text="超级会员"
                    android:textColor="#ffffff"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ececec"
                android:orientation="vertical">

                <Button
                    android:id="@+id/touxiang"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="1px"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:text="更换头像" />

                <Button
                    android:id="@+id/bangding"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="1px"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:text="绑定车辆" />

                <Button
                    android:id="@+id/xinxi"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="1px"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:text="详细信息" />

                <Button
                    android:id="@+id/tousu"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="1px"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:text="投诉建议" />


                <Button
                    android:id="@+id/banben"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="1px"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:text="版本详情" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</android.support.v4.widget.DrawerLayout>